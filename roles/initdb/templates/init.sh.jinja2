#!/bin/bash

new_pass=$(pwgen -ncCs 10 1)
systemctl start {{db_service_name}}

{% if db_service_name == 'mysql' or db_service_name == 'mysqld' or db_service_name == 'mariadb' %}
mysqladmin -uroot -p{{mysql_root_password | default('Websoft9',true)}} password $new_pass
{% if (app_db_user is defined) and (app_db_user != none) %}
mysqladmin -u{{app_db_user}} -p{{app_db_password}} password $new_pass
{% endif %}
{% endif %}

{% if (db_config_path is defined ) and (db_config_path != none) %}
{% for path in db_config_path %}

sed -i "s/{{mysql_root_password | default('Websoft9',true)}}/$new_pass/" {{path}}

{% endfor %}
{% endif %}

sed -i "s/{{mysql_root_password | default('Websoft9',true)}}/$new_pass/g" /credentials/password.txt

{% if app_server != none %}
systemctl restart {{app_server}}
{% endif %}

sed -i 's/\/root\/init.sh//g' /etc/rc.local
rm -rf /root/init.sh
